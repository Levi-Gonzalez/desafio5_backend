<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DESAFIO BACKEND - PLANTILLAS - EJS</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>

<body>
    <h1 class="text-center my-5">PRODUCTOS</h1>
    <div class="container d-flex flex-column justify-content-center my-5">
        <% if (empty) { %>
        <div class="bg-info p-5 rounded">
            <h2 class="text-center text-warning">
                LISTA DE PRODUCTOS VACIA
            </h2>
        </div>
        <% } else { %>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Product</th>
                    <th scope="col">Price</th>
                    <th scope="col">Thumbnail</th>
                </tr>
            </thead>
            <tbody>
                <% productos.forEach(product => { %>
                    <tr>
                        <th scope="col"><%= product.id %></th>
                        <th scope="col"><%= product.title %></th>
                        <th scope="col"><%= product.price %></th>
                        <th scope="col"><img src=<%= product.thumbnail %>></th>
    
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <% } %>
        <a href="/" class="my-5 align-self-center">
            <button class="btn btn-secondary" type="button">VOLVER AL FORMULARIO DE CARGA</button>
        </a>
    </div>
</body>

</html>